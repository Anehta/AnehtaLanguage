{
  "Function Declaration": {
    "prefix": "func",
    "body": [
      "func ${1:name}(${2:params}) -> ${3:int} {",
      "\t$0",
      "}"
    ],
    "description": "Declare a function with parameters and return type"
  },
  "For Loop": {
    "prefix": "for",
    "body": [
      "for (var ${1:i} = ${2:0}; ${1:i} < ${3:n}; ${1:i} = ${1:i} + 1) {",
      "\t$0",
      "}"
    ],
    "description": "Standard for loop with counter"
  },
  "For Infinite Loop": {
    "prefix": "fori",
    "body": [
      "for (;;) {",
      "\t$0",
      "}"
    ],
    "description": "Infinite for loop"
  },
  "If Statement": {
    "prefix": "if",
    "body": [
      "if (${1:condition}) {",
      "\t$0",
      "}"
    ],
    "description": "If statement"
  },
  "If-Else Statement": {
    "prefix": "ife",
    "body": [
      "if (${1:condition}) {",
      "\t$2",
      "} else {",
      "\t$0",
      "}"
    ],
    "description": "If-else statement"
  },
  "If-Elseif-Else Statement": {
    "prefix": "ifel",
    "body": [
      "if (${1:condition}) {",
      "\t$2",
      "} elseif (${3:condition}) {",
      "\t$4",
      "} else {",
      "\t$0",
      "}"
    ],
    "description": "If-elseif-else statement"
  },
  "Timer Block": {
    "prefix": "timer",
    "body": [
      "timer {",
      "\t$0",
      "}"
    ],
    "description": "Timer block â€” auto-measures and prints elapsed time"
  },
  "Variable Declaration": {
    "prefix": "var",
    "body": [
      "var ${1:name} = ${0:value}"
    ],
    "description": "Declare a variable"
  },
  "Variable with Type": {
    "prefix": "vart",
    "body": [
      "var ${1:name}: ${2:int} = ${0:value}"
    ],
    "description": "Declare a variable with explicit type"
  },
  "Print": {
    "prefix": "print",
    "body": [
      "print(${0:value})"
    ],
    "description": "Print a value to stdout"
  },
  "Input": {
    "prefix": "input",
    "body": [
      "var ${1:x} = input()"
    ],
    "description": "Read an integer from stdin"
  },
  "Random Range": {
    "prefix": "rand",
    "body": [
      "${1:min} ~ ${2:max}"
    ],
    "description": "Random number in range [min, max] using ~ operator"
  },
  "Closure Expression": {
    "prefix": "closure",
    "body": [
      "|${1:x}| => ${0:expr}"
    ],
    "description": "Closure (anonymous function) with single expression body"
  },
  "Closure Block": {
    "prefix": "closureb",
    "body": [
      "|${1:x}| => {",
      "\t$0",
      "}"
    ],
    "description": "Closure (anonymous function) with block body"
  },
  "Closure No Params": {
    "prefix": "closure0",
    "body": [
      "|| => ${0:expr}"
    ],
    "description": "Zero-parameter closure"
  },
  "Table Literal": {
    "prefix": "table",
    "body": [
      "var ${1:name} = {",
      "\t${2:key}: ${0:value}",
      "}"
    ],
    "description": "Table literal with key-value pairs"
  },
  "Table Multi-field": {
    "prefix": "tablem",
    "body": [
      "var ${1:name} = { ${2:key1}: ${3:val1}, ${4:key2}: ${0:val2} }"
    ],
    "description": "Table with multiple fields on one line"
  },
  "Table Nested": {
    "prefix": "tablen",
    "body": [
      "var ${1:name} = {",
      "\t${2:key}: {",
      "\t\t${3:innerKey}: ${0:innerValue}",
      "\t}",
      "}"
    ],
    "description": "Nested table literal (tables can only nest in literals)"
  },
  "Table Factory Function": {
    "prefix": "tablef",
    "body": [
      "func ${1:make}() -> int {",
      "\tvar t = { ${2:key}: ${3:value} }",
      "\treturn t",
      "}",
      "var ${4:result} = ${1:make}()"
    ],
    "description": "Function that creates and returns a table (ownership transfer)"
  },
  "Vector 2D": {
    "prefix": "vec2",
    "body": [
      "var ${1:v} = [${2:1.0}, ${0:2.0}]"
    ],
    "description": "Create a 2D vector"
  },
  "Vector 3D": {
    "prefix": "vec3",
    "body": [
      "var ${1:v} = [${2:1.0}, ${3:2.0}, ${0:3.0}]"
    ],
    "description": "Create a 3D vector"
  },
  "Vector 4D": {
    "prefix": "vec4",
    "body": [
      "var ${1:v} = [${2:1.0}, ${3:2.0}, ${4:3.0}, ${0:4.0}]"
    ],
    "description": "Create a 4D vector"
  },
  "Matrix 2x2": {
    "prefix": "mat2",
    "body": [
      "var ${1:m} = [${2:1.0}, ${3:0.0};",
      "             ${4:0.0}, ${0:1.0}]"
    ],
    "description": "Create a 2x2 matrix (identity by default)"
  },
  "Matrix 3x3": {
    "prefix": "mat3",
    "body": [
      "var ${1:m} = [${2:1.0}, ${3:0.0}, ${4:0.0};",
      "             ${5:0.0}, ${6:1.0}, ${7:0.0};",
      "             ${8:0.0}, ${9:0.0}, ${0:1.0}]"
    ],
    "description": "Create a 3x3 matrix (identity by default)"
  },
  "Matrix 4x4": {
    "prefix": "mat4",
    "body": [
      "var ${1:m} = [${2:1.0}, ${3:0.0}, ${4:0.0}, ${5:0.0};",
      "             ${6:0.0}, ${7:1.0}, ${8:0.0}, ${9:0.0};",
      "             ${10:0.0}, ${11:0.0}, ${12:1.0}, ${13:0.0};",
      "             ${14:0.0}, ${15:0.0}, ${16:0.0}, ${0:1.0}]"
    ],
    "description": "Create a 4x4 matrix (identity by default)"
  },
  "Vector Dot Product": {
    "prefix": "vdot",
    "body": [
      "var ${1:dot} = ${2:v1} @ ${0:v2}"
    ],
    "description": "Calculate dot product of two vectors using @ operator"
  },
  "Vector Cross Product": {
    "prefix": "vcross",
    "body": [
      "var ${1:cross} = ${2:v1} # ${0:v2}"
    ],
    "description": "Calculate cross product of two 3D vectors using # operator"
  },
  "Vector Addition": {
    "prefix": "vadd",
    "body": [
      "var ${1:result} = ${2:v1} + ${0:v2}"
    ],
    "description": "Add two vectors element-wise"
  },
  "Vector Scalar Multiply": {
    "prefix": "vscale",
    "body": [
      "var ${1:result} = ${2:v} * ${0:2.0}"
    ],
    "description": "Multiply vector by scalar"
  },
  "Swizzle XY": {
    "prefix": "sxy",
    "body": [
      "var ${1:v2d} = ${0:v}.xy"
    ],
    "description": "Extract x and y components using swizzle"
  },
  "Swizzle XYZ": {
    "prefix": "sxyz",
    "body": [
      "var ${1:v3d} = ${0:v}.xyz"
    ],
    "description": "Extract x, y, z components using swizzle"
  },
  "Swizzle RGBA": {
    "prefix": "srgba",
    "body": [
      "var ${1:color} = ${0:v}.rgba"
    ],
    "description": "Extract r, g, b, a components using swizzle"
  },
  "Matrix Multiply": {
    "prefix": "mmul",
    "body": [
      "var ${1:result} = ${2:m1} * ${0:m2}"
    ],
    "description": "Multiply two matrices (true matrix multiplication)"
  },
  "Matrix Vector Multiply": {
    "prefix": "mvmul",
    "body": [
      "var ${1:result} = ${2:mat} * ${0:vec}"
    ],
    "description": "Multiply matrix by vector"
  },
  "Float Conversion": {
    "prefix": "tofloat",
    "body": [
      "var ${1:f} = float(${0:value})"
    ],
    "description": "Convert value to float using float() function"
  },
  "Vector Length": {
    "prefix": "vlen",
    "body": [
      "var ${1:length} = len(${0:v})"
    ],
    "description": "Get length of vector using len() function"
  }
}
